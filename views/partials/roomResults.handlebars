<!-- Main content section -->
<article class="col-sm-9 animate__animated" id="searchResults">
    <div class="row">
        {{#each rooms as |room|}}
        <div class="card col-md-6 col-lg-4">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{room.image}}" class="card-img" alt="/imgs/sampleSpace.jpg">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title" id="{{room.id}}_cardTitle">{{room.name}}</h5>
                            <p class="card-text" id="{{room.id}}_cardDescription">{{room.description}}</p>
                            <p class="card-text"><small class="text-muted">
                                    <a href="/room/{{room.id}}" class="reserve-link" id="reserveLink">Reserve Room</a>
                                </small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</article>