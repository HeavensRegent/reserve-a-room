<section class="container text-center">
  <div class="row">
    <h2 class="col" id="loginHeader">Login</h2>
  </div>
  <form class="form login-form" id="loginForm">
    <div class="row">
      <div class="col text-end" id="emailLabel">
        Email:
      </div>
      <input class="col form-control" type="email" id="email" />
    </div>
    <div class="row">
      <div class="col text-end" id="passwordLabel">
        Password:
      </div>
      <input class="col form-control" type="password" id="password" />
    </div>
    <button class="col btn btn-primary" type="submit" id="submit">Login</button>
  </form>
  <div class="row">
    <p>New User? <a href="/signup" id="signup">Sign-Up Instead</a></p>
  </div>
</section>
<script src="./js/login.js"></script>