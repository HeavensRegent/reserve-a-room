<section class="container text-center">
  <div class="row">
    <h2 class="col" id="signupHeader">Signup</h2>
  </div>
  <form class="form signup-form" id="signupForm">
    <div class="row">
      <div class="col text-end" id="nameLabel">Name:</div>
      <input class="col form-control" type="text" id="name-signup" />
    </div>
    <div class="row">
      <div class="col text-end" id="emailLabel">Email:</div>
      <input class="col form-control" type="email" id="email-signup" />
    </div>
    <div class="row">
      <div class="col text-end" id="passwordLabel">Password:</div>
      <input class="col form-control" type="password" id="password-signup" />
    </div>
    <div class="row">
      <div class="col text-end" id="confirmLabel">Confirm Password:</div>
      <input class="col form-control" type="password" id="password-confirm" />
    </div>
    <button class="col btn btn-primary" type="submit" id="signUp">Sign-Up</button>
  </form>
  <div class="row">
    <p>Already a Member? <a href="/login" id="signup">Login Instead</a></p>
  </div>
</section>
<script src="/js/signup.js"></script>